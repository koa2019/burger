{{!-- content will be rendered to {{{body}}} in main.handlebars file--}}

<h1>Eat-da-Burgers!</h1>

<div>
  {{!-- loop through burger model & render each burger to page --}}
  {{#each burgers}}
    {{#unless this.devoured}}
  <div>
    <pre id="{{this.id}}" value="{{this.devoured}}">{{this.burgerName}} <button id="{{this.id}}">Devour It!</button>
    </pre>
  </div>
    {{/unless}}
  {{/each}}
</div>

